{% extends '::base.html.twig' %}
{% block title %}Liste des articles{% endblock %}

{% block body -%}
    <h1>Article list</h1>

    <table class="records_list table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Blog</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Imageprincipale</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
{#                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td>{{ entity.blog.nom }}</td>
                <td>{{ entity.titre }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.imagePrincipale %}<img src="{{ asset(entity.getImagePrincipaleWeb) }}" />{% endif %}</td>
                <td>{{ entity.contenu }}</td>
                <td>                
                    <a href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                    <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>               
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <a href="{{ path('article_new') }}">Nouvel article</a>       
    
{% endblock %}
