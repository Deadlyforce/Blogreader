{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>url</th>
                <td><a target="_blank" href="{{ article.url }}" title="{{ article.titre }}">{{ article.url }}</a></td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{% if article.titre %}{{ article.titre }}{% else %}No title{% endif %}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if article.date %}{{ article.date|date('Y-m-d') }}{% else %}No date{% endif %}</td>
            </tr>
            <tr>
                <th>Imageprincipale</th>
                <td>{{ article.imagePrincipale }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ article.source }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_edit', { 'id': article.id, 'blog_id': blog_id }) }}">Edit</a><br/>

    {{ form(delete_form) }}

{% endblock %}
