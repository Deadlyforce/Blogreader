{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Imageprincipale</th>
                <td>{{ article.imagePrincipale }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_edit', { 'id': article.id, 'blog_id': blog_id }) }}">Edit</a><br/>

    {{ form(delete_form) }}

{% endblock %}
